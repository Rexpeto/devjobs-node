<main class="contenedor">
    <form class="default-form" method="POST">
        <div class="campo">
            <label for="email">Corre:</label>
            <input type="email" name="email" id="email" placeholder="Coloque su email" required>
        </div>

        <div class="campo">
            <label for="password">Contraseña:</label>
            <input type="password" name="password" id="password" placeholder="Coloque su contraseña" required>
        </div>
        <div class="campo acciones">
            <a href="/register">Crear una cuenta</a>
            <a href="/restablecer">Olvidé mi contraseña</a>
        </div>
        <div class="campo">
            <input type="submit" value="Iniciar sesión" class="btn btn-azul">
        </div>
    </form>
</main>