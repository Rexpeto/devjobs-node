<main class="contenedor">
    <form action="vacantes/crear" method="post" class="default-form">
        <h3>Información general</h3>
        <div class="campo">
            <label for="titulo">Titulo:</label>
            <input type="text" name="titulo" id="titulo" placeholder="Coloque el titulo de la vacante" required>
        </div>

        <div class="campo">
            <label for="empresa">Empresa:</label>
            <input type="text" name="empresa" id="empresa" placeholder="Coloque el nombre de la empresa" required>
        </div>

        <div class="campo">
            <label for="salario">Salario (USD):</label>
            <input type="number" name="salario" id="salario" placeholder="Coloque el salario de la vacante" required>
        </div>

        <div class="campo">
            <label for="ubicacion">Ubicación:</label>
            <input type="text" name="ubicacion" id="ubicacion" placeholder="Ej: Venezuela o Remoto" required>
        </div>

        <div class="campo">
            <label for="contrato">Contrato:</label>
            <select name="contrato" id="contrato">
                <option disabled selected>--Seleccione--</option>
                <option value="Freelance">Freelance</option>
                <option value="Tiempo completo">Tiempo completo</option>
                <option value="Medio tiempo">Medio tiempo</option>
                <option value="Por proyecto">Por proyecto</option>
            </select>
        </div>
        <h3>Descripción de la vacante</h3>
        <div class="campo descripcion">
            <label for="descripcion">Descripción del puesto</label>
            <input type="hidden" name="descripcion" id="x">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            <input type="hidden" name="skills" id="skills">
            {{#seleccionarSkills a}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="submit" value="Públicar" class="btn btn-azul">
        </div>
    </form>
</main>