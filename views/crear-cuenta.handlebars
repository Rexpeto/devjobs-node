<main class="contenedor">
    <form method="post" class="default-form">
        
        <div class="campo">
            <label for="email">Correo:</label>
            <input type="email" name="email" id="email" placeholder="Coloque su email">
        </div>

        <div class="campo">
            <label for="nombre">Nombre:</label>
            <input type="text" name="nombre" id="nombre" placeholder="Coloque su nombre">
        </div>

        <div class="campo">
            <label for="password">Contraseña:</label>
            <input type="password" name="password" id="password" placeholder="Coloque su contraseña">
        </div>
        

        <div class="campo">
            <label for="password_r">Repitir contraseña:</label>
            <input type="password" name="password_r" id="password_r" placeholder="Repita su contraseña">
        </div>

        <div class="campo acciones">
            <a href="/iniciar-sesion">Volver a Iniciar Sesión</a>
        </div>

        <div class="campo centrar-horizontal">
            <input type="submit" value="Crear cuenta" class="btn btn-azul">
        </div>
    </form>
</main>